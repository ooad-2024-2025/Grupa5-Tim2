@model OffroadAdventure.Models.Notifikacija

@{
    ViewData["Title"] = "Kreiraj";
}

<h1>Kreiraj</h1>

<h4>Notifikacija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="primalac_id" class="control-label"></label>
                <input asp-for="primalac_id" class="form-control" />
                <span asp-validation-for="primalac_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tekst" class="control-label"></label>
                <input asp-for="tekst" class="form-control" />
                <span asp-validation-for="tekst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datum" class="control-label"></label>
                <input asp-for="datum" class="form-control" type="datetime-local" />
                <span asp-validation-for="datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="status" /> @Html.DisplayNameFor(model => model.status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-primary" /> 
            </div>
        </form>
    </div>
</div>

<div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Nazad na listu notifikacija</a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
