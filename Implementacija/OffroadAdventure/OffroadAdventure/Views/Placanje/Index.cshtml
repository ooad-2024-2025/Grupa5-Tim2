        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nacinPlacanja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datumPlacanja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.popust)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.zahtjevZaRentanje.id)
            </td>
