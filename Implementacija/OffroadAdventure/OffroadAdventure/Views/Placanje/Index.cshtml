@model IEnumerable<OffroadAdventure.Models.Placanje>

    @{
    ViewData["Title"] = "Index";
    }

    <h1>Lista plaćanja</h1>

    <p>
        <a asp-action="Create">Kreiraj novo</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.nacinPlacanja)</th>
                <th>@Html.DisplayNameFor(model => model.status)</th>
                <th>@Html.DisplayNameFor(model => model.datumPlacanja)</th>
                <th>@Html.DisplayNameFor(model => model.popust)</th>
                <th>@Html.DisplayNameFor(model => model.zahtjevZaRentanje)</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.nacinPlacanja)</td>
                <td>@Html.DisplayFor(modelItem => item.status)</td>
                <td>@Html.DisplayFor(modelItem => item.datumPlacanja)</td>
                <td>@Html.DisplayFor(modelItem => item.popust)</td>
                <td>@Html.DisplayFor(modelItem => item.zahtjevZaRentanje.id)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Izmijeni</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>

                    @* Dugme Plati karticom — prikaz samo ako je korisnik prijavljen *@
                    @if (User.Identity.IsAuthenticated)
                    {
                    <form asp-action="PlatiKarticom" asp-controller="Placanje" method="post" class="d-inline ms-2">
                        <input type="hidden" name="placanjeId" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-success">Plati karticom</button>
                    </form>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
